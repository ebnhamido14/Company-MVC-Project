@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success ">Add New Role</a>
<br />
@if (Model.Count() > 0)
{
    <h1>All Roles</h1>
    <br />
    <br />
    <div class="m-2">
        <form class="row offset-2" asp-action="Index" asp-controller="Role">

            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's' Name" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>


        </form>
    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.Name)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.Name</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>No Roles Found</h1>
    </div>
}